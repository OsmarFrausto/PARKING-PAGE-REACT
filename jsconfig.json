{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
     "baseUrl": "src",
     "paths": {
      "@/*": ["*"],
      "@hooks/*": ["hooks/*"],
      "@lib/*": ["lib/*"],
      "@utils/*": ["utils/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "src/lib/auth.js", "src/contexts/AuthContext.jsx", "src/hooks/useLocalStorage.js", "src/app/login/page.jsx", "src/app/layout.jsx", "src/app/page.jsx", "src/app/protected/dashboard/page.jsx", "src/app/protected/profile/page.jsx", "src/app/auth/layout.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}
